<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="emas.app">
    <body>

    <metal:main fill-slot="main">
        <tal:main-macro metal:define-macro="main">

            <div tal:replace="structure provider:plone.abovecontenttitle" />

            <h1 class="documentFirstHeading" tal:content="context/title" />
            
            <div tal:replace="structure provider:plone.belowcontenttitle" />
            
            <label>Description</label>
            <div class="documentDescription">
                <span tal:content="structure context/description" />
            </div>

            <div tal:replace="structure provider:plone.abovecontentbody" />

            <div class="field">
                <label>Service type</label>
                <div tal:content="structure view/w/service_type/render" />
            </div>

            <div class="field">
                <label>Grade</label>
                <div tal:content="structure view/w/grade/render" />
            </div>

            <div class="field">
                <label>Subject</label>
                <div tal:content="structure view/w/subject/render" />
            </div>

            <div class="field">
                <label>Channels</label>
                <div tal:content="structure view/w/channels/render" />
            </div>

            <div class="field">
                <label>Subscription period</label>
                <div tal:content="structure view/w/subscription_period/render" />
            </div>

            <div class="field">
                <label>Price</label>
                <div>
                    R&nbsp;<span tal:content="structure view/w/price/render" />
                </div>
            </div>

            <div class="field">
                <label>Amount of credits</label>
                <div tal:content="structure view/w/amount_of_credits/render" />
            </div>

            <div class="field">
                <label>Amount of moola</label>
                <div tal:content="structure view/w/amount_of_moola/render" />
            </div>

            <div class="field">
                <label>Access group</label>
                <div tal:content="structure view/w/access_group/render" />
            </div>

            <div class="field">
                <label>Access path</label>
                <div tal:content="structure view/w/access_path/render" />
            </div>

            <div tal:replace="structure provider:plone.belowcontentbody" />

        </tal:main-macro>
    </metal:main>

    </body>
</html>
